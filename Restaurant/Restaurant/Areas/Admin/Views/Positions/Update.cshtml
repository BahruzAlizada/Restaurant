@model Position

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Update Position</h5>
            </div>
            <div class="card-body">
                <form method="post">
                  
                    <div class="mb-3 form-group">
                        <label asp-for="PositionName" class="form-label">Position Name</label>
                        <input asp-for="PositionName" class="form-control" />
                        <span class="text-danger" asp-validation-for="PositionName"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Salary" class="form-label">Salary</label>
                        <input asp-for="Salary" class="form-control" />
                        <span class="text-danger" asp-validation-for="Salary"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-secondary" asp-action="Index">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}








