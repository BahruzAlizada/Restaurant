@model List<Bio>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Bio
        </h2>

    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Header</th>
                        <th>FooterAddress</th>
                        <th>FooterPhone</th>
                        <th>FooterEmail</th>
                        <th>OpenTime</th>
                        <th>CloseTime</th>
                        <th style="text-align:right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Bio item in Model)
                    {
                        <tr>
                            <td>@Html.Raw(item.Header)</td>
                            <td>@item.FooterAddress</td>
                            <td>@item.FooterPhone</td>
                            <td>@item.FooterEmail</td>
                            <th>@item.OpenTime.ToShortTimeString()</th>
                            <th>@item.CloseTime.ToShortTimeString()</th>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info rounded-pill text-white" style="margin-right:10px">Update</a>          
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />