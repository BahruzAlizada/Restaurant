@model List<Cheff>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Cheff
        </h2>

    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Full Name</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th style="text-align:right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Cheff item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.Image" style="height:110px;width:185px;object-fit:cover;border-radius:0px;">
                            </td>
                            <td>@Html.Raw(item.FullName)</td>
                            <td>@item.Role</td>
                            <td>
                                @if (item.IsDeactive)
                                {
                                    <span style="background-color:red;color:white;padding:6px 4px;">Deactive</span>
                                }
                                else
                                {
                                    <span style="background-color:green;color:white;padding:6px 4px;">Active</span>
                                }
                            </td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info rounded-pill text-white" style="margin-right:10px">Update</a>
                                    @if (item.IsDeactive)
                                    {
                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success rounded-pill text-white" style="margin-right:10px;width:117px;">Activate</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger rounded-pill text-white" style="margin-right:10px;width:117px;">Deactivate</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />